<Window x:Class="ClientX.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientX"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="400" Background="#2e3137">
    
        <StackPanel Margin="20" VerticalAlignment="Center">
            <Label Content="ClientX" Foreground="White" FontSize="25"  HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="White"/>
            <TextBox Name="LoginInput" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Label Content="Password" Foreground="White"/>
            <PasswordBox Name="PasswordInput" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Button x:Name="btnSubmit" Click="tryLogin" Content="Login" Margin="85,10" Background="#545d6a" Foreground="White" FontSize="18"/>

        </StackPanel>

</Window>
